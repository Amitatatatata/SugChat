  <h1> Chats Log </h1>
  <%= search_form_for @search  do |f| %>
    <div class="form-group">
      <%= f.label :message_cont, "Search Message" %>
      <%= f.text_field :message_cont %>
      <%= f.submit "Search" %>
    </div>
  <% end %>
    <div class="container">
      <%= paginate @chats %>
      <div class="table-responsive">
        <table class="table table-dark table-bordered table-hover table-sm">
          <thead>
            <tr>
              <th>Room</th>
              <th><%= sort_link(@search, :message, "Message") %></th>
              <th>User</th>
              <th><%= sort_link(@search, :created_at, "Posted_at") %></th>
              <th colspan="2">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @chats.each do |chat| %>
              <tr>
                <% chat_room = @chat_rooms.find(chat.chat_room_id) %>
                <td  style="font-size : 16px;"><%= link_to chat_room.name, chat_room_path(chat_room.id), :style=>"color:white;" %></td>
                <td  style="font-size : 16px;"><%= chat.message %></td>
                <td style="font-size : 16px;">
                  <% user = @users.find(chat.user_id) %>
                  <%= user.name %>
                </td>
                <td style="font-size : 16px;"> <%= simple_time(chat.created_at) %> </td>
              <% if user_signed_in? %>
                <% if chat.user_id == current_user.id %>
                  <td style="font-size : 16px;"><%= link_to 'Show', chat_path(chat), :style=>"color:green;" %></td>
                  <td style="font-size : 16px;"><%= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' },:style=>"color:red;" %></td>
                <% else %>
                  <td></td><td></td>
                <% end %>
              <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <br>
