<!DOCTYPE html>
<html>
  <head>
    <title>SugChat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <% if user_signed_in? %>
        You are signing in as <%= current_user.email %>
        <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, form: {style: "display:inline"}, data: {confirm: 'Are you sure?'} %>
        <% else %>
        Welcome Guest!
        <%= button_to 'Sign In', new_user_session_path, form: {style: "display:inline"} %>
        <%= button_to 'Sign Up', new_user_registration_path, method: :get, form: {style: "display:inline"} %>
      <% end %>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
